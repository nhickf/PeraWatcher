<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.wallet.WalletFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/wallet_net_worth"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/wallet_recyclerview_wallet"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="16dp"
        >

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Net Worth"
            android:textSize="20sp"
            app:fontFamily="@font/poppins_medium"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            app:fontFamily="@font/poppins_semibold"
            android:text="$200,000"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/wallet_add_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/ic_baseline_bill_add_24"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/wallet_recyclerview_wallet"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:itemCount="2"
        tools:listitem="@layout/recyclerview_wallet_item_layout"
        app:layout_constraintTop_toBottomOf="@id/wallet_net_worth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    </androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>
